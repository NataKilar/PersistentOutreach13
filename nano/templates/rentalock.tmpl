<h2>Rent-A-Lock Airlock</h2>
{{if data.rented}}
	<div class='item'>
		<div class='itemLabel'>RENTED BY:</div>
		<div class='itemBody'>{{:data.rented_by}}</div>
	</div>
	<div class='item'>
		<div class='itemLabel'>RENTED FOR:</div>
		<div class='itemBody'>{{:data.rented_for}}</div>
	</div>
	<div class='item'>
		<div class='itemLabel'>LOCK:</div>
		<div class='itemBody'>
			{{if data.locked}}
				{{:helper.link('UNLOCK', null, { "unlock" : 1 })}}
			{{else}}
				{{:helper.link('LOCK', null, { "lock" : 1 })}}
			{{/if}}			
		</div>
	</div>
{{else}}
	<h3>AVAILABLE</h3>
{{/if}}
{{if data.can_deposit}}
	<div class='item'>
		<div class='itemLabel'>PRICE @ 3 DAYS:</div>
		<div class='itemBody'>{{:data.price}}</div>
	</div>
	<div class='item'>
		<div class='itemLabel'>PURCHASE:</div>
		<div class='itemBody'>{{:helper.link('RENT', null, { "rent" : 1 })}}</div>
	</div>
{{/if}}